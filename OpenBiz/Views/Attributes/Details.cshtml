@model BLL.Entities.Inventory.Attribute

@{
	ViewBag.Title = "Details";
}

<h2>Details</h2>

<div class="modal-header">
	<button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
	<h4 class="modal-title">Attribute</h4>
</div>
	<hr />
	<div class="modal-body">
	<div class="form-horizontal">
		<div class="form-group">
			@Html.LabelFor(model => model.Product.ProductName, new { @class = "control-label col-sm-3" })

		<div class="col-sm-9">
			@Html.TextBoxFor(model => model.Product.ProductName, new { @class = "form-control required", @disabled = "disabled"})
		</div>
		
		</div>
		<div class="form-group">
			@Html.LabelFor(model => model.Name, new { @class = "control-label col-sm-3" })

		<div class="col-sm-9">
			@Html.TextBoxFor(model => model.Name, new { @class = "form-control required", @disabled = "disabled"})
		</div>
		
		</div>

</div>
</div>

<div class="modal-footer">
	<button class="btn btn-warning" data-dismiss="modal">Close</button>
</div>

